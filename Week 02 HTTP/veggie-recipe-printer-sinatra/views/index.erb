<html>
  <head>
    <title><% @name %></title>
  </head>
  <body>
    <h1><%= @name %></h1>
    <ul>
      <% @ingredients.each do |ingredient| %>
        <li><%= ingredient %></li>
      <% end %>
    </ul>
    <ol>
      <% @directions.each do |direction| %>
        <li><%= direction %></li>
      <% end %>
    </ol>
    <% @reviews.each do |review| %>
      <% review.each do |key, value| %>
        <p><%= key.capitalize %>: <%= value %></p>
      <% end %>
    <% end%>
  </body>
</html>
